@model WinterStore_Mvc.Models.Customers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body style="">
    <div class="container-fluid mt-5 mb-5" style="margin:auto; width: 80%;  box-sizing: border-box; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); background-color: #b0d9ec ">
        <h4 class="text-center py-4">Registration</h4>


        @using (Html.BeginForm("Register", "Login"))
        {
            <div class="card-body  text-center px-5 py-3">
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12">
                        <label class="form-label">First Name :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerFirstName, new { @type = "email", @class = "form-control", @placeholder = "Enter Your Firstname" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">Last Name :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerLastName, new { @class = "form-control", @placeholder = "Enter Your Lastname" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">Email Address :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerEmail, new { @class = "form-control", @placeholder = "Enter Your Email Address" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">Password :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.PasswordFor((m) => m.CustomerPassword, new { @class = "form-control", @placeholder = "Enter Password" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">Confirm Password :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.PasswordFor((m) => m.CustomerPassword, new { @class = "form-control", @placeholder = "Enter Confirm Password" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">Address :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerAddress, new { @class = "form-control", @placeholder = "Enter Your Address" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">City :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerCity, new { @class = "form-control", @placeholder = "Enter Your City" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">State :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerState, new { @class = "form-control", @placeholder = "Enter Your State" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">Pin Code :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerZip, new { @class = "form-control", @placeholder = "Enter the Pincode" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">Mobile Number :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerPhone, new { @class = "form-control", @placeholder = "Enter the Mobile Number" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-12 col-sm-12" style="text-align: center;">
                        <button type="submit" class="btn btn-success m-auto" style="width: 150px">Registration</button>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-12 col-sm-12" style="text-align: center;">
                        Already have an account ? -  <a href="@Url.Action("Index","Login")" class="h6" style="text-decoration:none">Login Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (TempData["msg"] != null)
    {
        <script>
 alert('@TempData["msg"].ToString();'); window.location.href = "@Url.Action("Index","Login")";
        </script>
    }
</body>
</html>


