@model WinterStore_Mvc.Models.Customers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body style="">
    <div class="container-fluid  py-5" style="position: absolute; top: 40%; left: 50%; transform: translate(-50%,-50%); width: 50%;  box-sizing: border-box; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); background-color: #b0d9ec ">
        <h4 class="text-center py-4">Login</h4>


        @using (Html.BeginForm("Login", "Login"))
        {
            <div class="card-body  text-center px-5 py-2">
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12">
                        <label class="form-label">Email Address :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.TextBoxFor((m) => m.CustomerEmail, new { @type = "email", @class = "form-control", @placeholder = "npatel046@rku.ac.in" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        <label class="form-label">Password :</label>
                    </div>
                    <div class="col-md-12 col-lg-6 col-sm-12" style="text-align: center">
                        @Html.PasswordFor((m) => m.CustomerPassword, new { @class = "form-control", @placeholder = "Enter Password" })
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-12 col-lg-12 col-sm-12" style="text-align: center;">
                        <button type="submit" class="btn btn-success m-auto" style="width: 150px">Login</button>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-lg-12 col-sm-12" style="text-align: center;">
                        New here Create an account ? -  <a href="@Url.Action("Register","Login")" class="h6" style="text-decoration:none">Register Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
    
</body>
</html>

