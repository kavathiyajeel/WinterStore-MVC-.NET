@using WinterStore_Mvc.Models
@model IEnumerable<Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}


<div class="container">
    <h1 class="text-center"><i class="bi bi-box-seam mr-2"></i>My Orders</h1>
    <table class="table table-dark">
        <tr class="row m-3">
            <th class="col">Order ID</th>
            <th class="col">Order Date</th>
            <th class="col">Customer Name</th>
            <th class="col">Order Amount</th>
            <th class="col">Order Status No</th>

            <th class="col-md-2" colspan="1">Actions</th>
        </tr>
        @foreach (Order item in Model)
        {
            <tr class="row m-3 ">
                <td class="col">@item.OrderID</td>
                <td class="col">@item.OrderDate</td>
                <td class="col">@item.OrderStatus</td>
                <td class="col">@item.OrderTotal</td>
                <td class="col">@item.OrderStatus</td>

                <td class="col-md-2" colspan="4">

                    <a class="btn btn-outline-success m-1" href="@Url.Action("MyOrderDetails","Order",new { id = item.OrderID })"> View Detalis</a>



                </td>
            </tr>
        }
    </table>
</div>