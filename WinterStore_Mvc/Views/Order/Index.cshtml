@using WinterStore_Mvc.Models
@model IEnumerable<Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1 style="text-align:center">All Order</h1>
    <table class="table table-dark">
        <tr class="row m-3">
            <th class="col">Order ID</th>
            <th class="col">Order Date</th>
            <th class="col">Order Amount</th>
            <th class="col">Order Status No</th>

            <th class="col-md-6" colspan="2">Actions</th>
        </tr>
        @foreach (Order item in Model)
        {
            <tr class="row m-3 ">
                <td class="col">@item.OrderID</td>
                <td class="col">@item.OrderDate</td>
                <td class="col">@item.OrderTotal</td>
                <td class="col">@item.OrderStatus</td>

                <td class="col-md-6" colspan="4">
                    <a class="btn btn-outline-warning m-1" href="@Url.Action("","Order",new { id = item.OrderID })">Shipped</a>
                    <a class="btn btn-outline-success m-1" href="@Url.Action("","Order",new { id = item.OrderID })">Delivered</a>
                    <a class="btn btn-outline-danger m-1" href="@Url.Action("","Order",new { id = item.OrderID })">Cancelled</a>
                    <a class="btn btn-outline-info m-1" href="@Url.Action("","Order",new { id = item.OrderID })">Returned</a>

                </td>
            </tr>
        }
    </table>
</div>