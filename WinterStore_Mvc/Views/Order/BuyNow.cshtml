@model WinterStore_Mvc.Models.Customers
@{
    ViewBag.Title = "BuyNow";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}



<div class="container-fluid mt-2 mb-2 shadow-lg bg-white rounded" style="width: 100%; border: 1px solid black; box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2); border-radius: 5px;">
    <table class="table table-borderless" style="color: black;">
        <tr class="row">
            <td class="col">
                <h3 class="text-center">Shipping details</h3>
            </td>
        </tr>
       
        <tr class="row">
            <td class="col" style="text-align: center">
                <label class="form-label" runat="server">Name :</label>
            </td>
            <td class="col">
                
                @Html.EditorFor(model => model.CustomerFirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerFirstName, "", new { @class = "text-danger" })
            </td>
        </tr>

       
        <tr class="row">
            <td class="col " style="text-align: center">
                <label class="form-label" runat="server">Address :</label>
            </td>
            <td class="col " style="text-align: center">
               
                @Html.EditorFor(model => model.CustomerFirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerFirstName, "", new { @class = "text-danger" })
            </td>
        </tr>
     
        <tr class="row">
            <td class="col " style="text-align: center">
                <label class="form-label" runat="server">City :</label>
            </td>
            <td class="col" style="text-align: center">
                @Html.EditorFor(model => model.CustomerFirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerFirstName, "", new { @class = "text-danger" })
            </td>
        </tr>
      
        <tr class="row">
            <td class="col " style="text-align: center">
                <label class="form-label" runat="server">State :</label>
            </td>
            <td class="col" style="text-align: center">
                @Html.EditorFor(model => model.CustomerFirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerFirstName, "", new { @class = "text-danger" })
            </td>

        </tr>
    
        <tr class="row">
            <td class="col" style="text-align: center">
                <label class="form-label" runat="server">Pincode :</label>
            </td>
            <td class="col" style="text-align: center">
                @Html.EditorFor(model => model.CustomerFirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerFirstName, "", new { @class = "text-danger" })
            </td>
        </tr>
    
        <tr class="row">
            <td class="col " style="text-align: center">
                <label class="form-label" runat="server">Amount :</label>
            </td>
            <td class="col">
                @Html.EditorFor(model => model.CustomerFirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerFirstName, "", new { @class = "text-danger" })
            </td>
        </tr>
        
        <tr class="row">
            <td class="col " style="text-align: center">
                <label class="form-label" runat="server">Payment Method :</label>
            </td>
            <td class="col" style="text-align: center">
                
                <Select value={Pmethod} onChange={handleChange} style="width: 100%; height: 40px; color: black; background-Color: white;" }}>
                    <option value="Cash on Delivery">Cash on Delivery</option>
                    <option value="Paytm">Paytm</option>
                    <option value="Gpay">Gpay</option>
                    <option value="PhonePay">PhonePay</option>
                    <option value="OtherUpi">OtherUpi</option>
                    <option value="Net Banking">Net Banking</option>
                    <option value="Credit/Debit Card">Credit/Debit Card</option>
                    <option value="EMI">EMI</option>
                </Select>
            </td>
        </tr>

     
        <tr class="row">
            <td class="col " style="text-align: center">
            </td>
            <td class="col " style="text-align: center">
                <a href="@Url.Action("BuyNow","Order", new {@id=Model.CustomerID})" value="Place Order" class="btn btn-success" />
            </td>
        </tr>
    </table>
</div>