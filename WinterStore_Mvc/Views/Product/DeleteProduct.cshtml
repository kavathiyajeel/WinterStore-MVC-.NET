            <div class="col">
                @Html.DisplayFor(model => model.pname)
            </div>
        </div>
        <div class="row m-1">
            <div class="col">
                @Html.DisplayNameFor(model => model.pbrand)
            </div>

            <div class="col">
                @Html.DisplayFor(model => model.pbrand)
            </div>

        </div>
        <div class="row m-1">
            <div class="col">
                @Html.DisplayNameFor(model => model.pcategory)
            </div>

            <div class="col">
                @Html.DisplayFor(model => model.pcategory)
            </div>
        </div>
        <div class="row m-1">

            <div class="col">
                @Html.DisplayNameFor(model => model.isActive)
            </div>

            <div class="col">
                @Html.DisplayFor(model => model.isActive)
            </div>
        </div>
        <div class="form-actions no-color">
            <div class="col-md-offset-5 col-md-12" style="text-align:center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </div>
}

