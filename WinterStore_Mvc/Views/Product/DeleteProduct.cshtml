@model WinterStore_Mvc.Models.Product
@{
    ViewBag.Title = "DeleteProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center m-3"><i class="bi bi-trash mr-2"></i>Delete Product</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container bg-dark text-light py-3 m-2" style="border-radius:5px">

        <div class="row m-1">
            <div class="col">
                @Html.DisplayNameFor(model => model.pname)
