@model IEnumerable<WinterStore_Mvc.Models.Customers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container ">
    <h1 style="text-align:center;">Customer Details</h1>
    <a style="float:right" href="@Url.Action("AddCustomer","Customer")" class="btn btn-success m-3"> <i class="bi bi-plus mr-1"></i>Add New Customer</a>
    <table class="table  table-dark">
        <tr class="row m-2">
            <th class="col">CId</th>
            <th class="col">Customer Name</th>
            <th class="col">Customer Email</th>
          
            <th class="col">Customer DateAdded</th>
            <th class="col-md-3" colspan="2">Actions</th>
        </tr>
        @foreach (WinterStore_Mvc.Models.Customers item in Model)
        {
            <tr class="row m-2 ">
                <td class="col">@item.CustomerID</td>
                <td class="col">@item.CustomerFirstName @item.CustomerLastName</td>
                <td class="col">@item.CustomerEmail</td>
              
                <td class="col">@item.CustomerDateAdded</td>
                <td class="col-md-3" colspan="2">
                    <a class="btn btn-outline-warning m-1" href="@Url.Action("EditCustomer","Customer",new { id = item.CustomerID })"><i class="bi bi-pencil mr-1"></i>Edit</a>
                    <a class="btn btn-outline-danger m-1" href="@Url.Action("DeleteCustomer","Customer",new { id = item.CustomerID })"><i class="bi bi-trash mr-1"></i>Delete</a>

                </td>
            </tr>
        }
    </table>
   
</div>

