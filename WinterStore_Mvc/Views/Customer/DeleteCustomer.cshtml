@model WinterStore_Mvc.Models.Customers

@{
    ViewBag.Title = "DeleteCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center m-3"><i class="bi bi-trash mr-2 col-md-1"></i>Delete Customer</h2>

<h3 class="col-md-6">Are you sure you want to delete this?</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container bg-dark text-light py-3 m-2" style="border-radius:5px">

        <div class="row m-1">
            <div class="col">
                @Html.DisplayNameFor(model => model.CustomerFirstName)
            </div>

            <div class="col">
                @Html.DisplayFor(model => model.CustomerFirstName)
            </div>
        </div>
        <div class="row m-1">
            <div class="col">
                @Html.DisplayNameFor(model => model.CustomerLastName)
            </div>

            <div class="col">
                @Html.DisplayFor(model => model.CustomerLastName)
            </div>

        </div>
        <div class="row m-1">
            <div class="col">
                @Html.DisplayNameFor(model => model.CustomerEmail)
            </div>

            <div class="col">
                @Html.DisplayFor(model => model.CustomerEmail)
            </div>
        </div>
        <div class="row m-1">

            <div class="col">
                @Html.DisplayNameFor(model => model.CustomerIsActive)
            </div>

            <div class="col">
                @Html.DisplayFor(model => model.CustomerIsActive)
            </div>
        </div>
        <div class="form-actions no-color">
            <div class="col-md-offset-5 col-md-12" style="text-align:center">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>

    </div>

}
    @if (TempData["msg"] != null)
    {
        <script>
 alert('@TempData["msg"].ToString();'); window.location.href = "@Url.Action("Index","Customer")";
        </script>
    }








<div>
    <a class="btn btn-outline-danger mt-2" href="@Url.Action( "Index","Customer")">Back To List</a>
</div>
